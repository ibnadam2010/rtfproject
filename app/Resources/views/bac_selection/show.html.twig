{% extends 'adminbase.html.twig' %}

{% block admin %}
    <h1>Bac_selection</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bac_selection.id }}</td>
            </tr>
            <tr>
                <th>Dateenreg</th>
                <td>{% if bac_selection.dateEnreg %}{{ bac_selection.dateEnreg|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bac_selection_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bac_selection_edit', { 'id': bac_selection.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
