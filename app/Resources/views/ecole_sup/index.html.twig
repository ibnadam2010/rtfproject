{% extends 'adminbase.html.twig' %}

{% block admin %}
    {{ render(controller('AppBundle:Ecole_sup:new')) }}
    <br><br><br>
    <h3>Liste des ecoles supérieurs</h3>
    <div class="form-group">
        <div class = "input-group">
            <input type="text" id ="filter" name = "prenom" class="form-control" placeholder="Rechercher une ecole supérieur"/>
        </div>
    </div>
<table  class="footable" data-page-size ="10" data-filter="#filter">
    <thead >
    <th data-toggle="true" style="background:#122e48">Id</th>
    <th data-hide="phone" style="background:#122e48">Ecole</th>
    <th data-hide="phone" style="background:#122e48">Université</th>
    <th data-toggle="true" style="background:#122e48">Type</th>
    <th data-hide="phone" style="background:#122e48">Statut</th>
    <th data-hide="phone" style="background:#122e48">Adresse</th>
    <th data-toggle="true" style="background:#122e48">Telephone</th>
    <th data-hide="phone" style="background:#122e48">Email</th>
    <th data-hide="phone" style="background:#122e48">Site Web</th>
    <th data-hide="phone" style="background:#122e48">Année de Creation</th>
    <th data-hide="phone" style="background:#122e48">Action</th>
    </thead>
    <tbody >
    {% for ecole_sup in ecole_sups %}
    <tr>
        <td>{{ ecole_sup.id }}</td>
        <td>{{ ecole_sup.nomEcole }}</td>
        <td>{{ ecole_sup.nomUniversite }}</td>
        <td>{{ ecole_sup.typeEcole }}</td>
        <td>{{ ecole_sup.statutEcole }}</td>
        <td>{{ ecole_sup.adresEcole }}</td>
        <td>{{ ecole_sup.telEcole }}</td>
        <td>{{ ecole_sup.emailEcole }}</td>
        <td>{{ ecole_sup.urlEcole }}</td>
        <td>{{ ecole_sup.anneeCreation }}</td>
        <td>
            {{ render(controller('AppBundle:Ecole_sup:edit',{'id':ecole_sup.id})) }}
            <button class="btn btn-danger btn-sm confirm"  onclick="deleteDep('{{ ecole_sup.id }}')" ><i class="fas fa-trash-alt"></i></button>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot class = "hide-if-no-paging">
    <td colspan="11">

        <div class = "pagination">

        </div>

    </td>

    </tfoot>
</table>


    <script type="text/javascript">
        $(".footable").footable();
    </script>
{% endblock %}
