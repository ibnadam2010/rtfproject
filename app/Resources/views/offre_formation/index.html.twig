{% extends 'adminbase.html.twig' %}

{% block admin %}
    {{ render(controller('AppBundle:Offre_formation:new')) }}
    <br><br><br>
    <h3>Liste des offres de formations</h3>
    <div class="form-group">
        <div class = "input-group">
            <input type="text" id ="filter" name = "prenom" class="form-control" placeholder="Rechercher une offre de formation"/>
        </div>
    </div>
<table  class="footable" data-page-size ="10" data-filter="#filter">
    <thead >
    <th data-toggle="true" style="background:#122e48">ID</th>
    <th data-hide="phone" style="background:#122e48">Ecole</th>
    <th data-toggle="true" style="background:#122e48">Specialit√©</th>
    <th data-hide="phone" style="background:#122e48">Action</th>
    </thead>
    <tbody >
    {% for offre_formation in offre_formations %}
    <tr>
        <td>{{ offre_formation.id }}</td>
        <td>{{ offre_formation.ecole_sup.nomEcole }}</td>
        <td>{{ offre_formation.specialite.nomSpecialite }}</td>
        <td>
            {{ render(controller('AppBundle:Offre_formation:edit',{'id':offre_formation.id})) }}
            <button class="btn btn-danger btn-sm confirm"  onclick="deleteDep('{{ offre_formation.id }}')" ><i class="fas fa-trash-alt"></i></button>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot class = "hide-if-no-paging">
    <td colspan="4">

        <div class = "pagination">

        </div>

    </td>

    </tfoot>
</table>


    <script type="text/javascript">
        $(".footable").footable();
    </script>
{% endblock %}
