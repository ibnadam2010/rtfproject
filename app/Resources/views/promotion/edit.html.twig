{% block body %}
<button type="button" class="btn  btn-sm btn-warning" data-toggle="modal" data-target="#editModal{{ promotion.id }}">
 <i class="fas fa-pencil-alt"></i>
</button>

<!-- Modal -->
<div class="modal fade editDepModal" id="editModal{{ promotion.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Promotion</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         {{ form_start(edit_form, {'action': path('promotion_edit',{'id':promotion.id}), 'method': 'POST','attr': {'class': 'edit_promotion'}}) }}

         {{ form_widget(edit_form) }}
    
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
        <input type="submit" class = "btn btn-primary" value="Modifier" />
    {{ form_end(edit_form) }}
      </div>
    </div>
  </div>
</div>


{% endblock %}
