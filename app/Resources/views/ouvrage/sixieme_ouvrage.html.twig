{% extends 'base.html.twig' %}

{% block title %}ouvrages en Sixième{% endblock %}
{% block sideLeft %}

    <div class="row">
        <div class="card col-md-10 col-xs-12">
            <img class="card-img-top" src="https://placeimg.com/380/230/nature" alt="Card image cap">
            <div class="card-body">
                <a href="#" class="btn btn-secondary">Pub tiers.</a>
            </div>
        </div>
    </div>

    


{% endblock %}

{% block linksContent %}
        

    <div class="row">
    
    <h3>Liste des Ouvrage en 6 ième</h3>
    <div class="form-group">
        <div class = "input-group">
            <input type="text" id ="filter" name = "prenom" class="form-control" placeholder="Rechercher un ouvrage"/>
        </div>
    </div>
<table  class="footable" data-page-size ="10" data-filter="#filter">
    <thead >
    <th data-hide="phone" style="background:#122e48">Nom Ouvrage</th>
    <th data-hide="phone" style="background:#122e48">Edition</th>
    <th data-toggle="true" style="background:#122e48">Auteur</th>
    <th data-hide="phone" style="background:#122e48">Année</th>
    <th data-hide="phone" style="background:#122e48">Actions</th>
    </thead>
    <tbody >
    {% for ouvrage in ouvrages %}
    <tr>
        <td>{{ ouvrage.nomOuvrage }}</td>
        <td>{{ ouvrage.edition }}</td>
        <td>{{ ouvrage.auteur }}</td>
        <td>{{ ouvrage.annee }}</td>
        
    </tr>
    {% endfor %}
    </tbody>
    <tfoot class = "hide-if-no-paging">
    <td colspan="6">

        <div class = "pagination">

        </div>

    </td>

    </tfoot>
</table>


    <script type="text/javascript">
        $(".footable").footable();
    </script>
        

    </div>




{% endblock %}



