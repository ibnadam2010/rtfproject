{% extends 'adminbase.html.twig' %}
{% block title %}Departement{% endblock %}
{% block admin %}
    {{ render(controller('AppBundle:Coach:new')) }}
    <br><br><br>
    <h3>Liste des coach</h3>
    <div class="form-group">
        <div class = "input-group">
            <input type="text" id ="filter" name = "prenom" class="form-control" placeholder="Rechercher un coach"/>
        </div>
    </div>
<table  class="footable" data-page-size ="10" data-filter="#filter">
    <thead >
    <th data-toggle="true" style="background:#122e48">Id</th>
    <th data-hide="phone" style="background:#122e48">Nom</th>
    <th data-hide="phone" style="background:#122e48">Prenom</th>
    <th data-hide="phone" style="background:#122e48">Sexe</th>
    <th data-hide="phone" style="background:#122e48">Date naissance </th>
    <th data-hide="phone" style="background:#122e48">Piece coach</th>
    <th data-hide="phone" style="background:#122e48">Num pi√®ce</th>
    <th data-hide="phone" style="background:#122e48">Adresse</th>
    <th data-hide="phone" style="background:#122e48">Telephone</th>
    <th data-hide="phone" style="background:#122e48">Email</th>
    <th data-hide="phone" style="background:#122e48">Type</th>
    <th data-hide="phone" style="background:#122e48">Actions</th>
    </thead>
    <tbody >
    {% for coach in coaches %}
    <tr>
        <td>{{ coach.id }}</td>
        <td>{{ coach.nomCoach }}</td>
        <td>{{ coach.prenomCoach }}</td>
        <td>{{ coach.sexeCoach }}</td>
        <td>{% if coach.datenaissanceCoach %}{{ coach.datenaissanceCoach|date('Y-m-d') }}{% endif %}</td>
        <td>{{ coach.pieceCoach }}</td>
        <td>{{ coach.numpieceCoach }}</td>
        <td>{{ coach.adresseCoach }}</td>
        <td>{{ coach.telCoach }}</td>
        <td>{{ coach.emailCoach }}</td>
        <td>{{ coach.typeCoach }}</td>
        <td>
            {{ render(controller('AppBundle:Coach:edit',{'id':coach.id})) }}
            <button class="btn btn-danger btn-sm confirm"  onclick="deleteDep('{{ coach.id }}')" ><i class="fas fa-trash-alt"></i></button>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot class = "hide-if-no-paging">
    <td colspan="12">

        <div class = "pagination">

        </div>

    </td>

    </tfoot>
</table>


    <script type="text/javascript">
        $(".footable").footable();
    </script>
{% endblock %}
