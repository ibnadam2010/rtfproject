{% extends 'adminbase.html.twig' %}

{% block admin %}
    <h1>Metier</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ metier.id }}</td>
            </tr>
            <tr>
                <th>Nommetier</th>
                <td>{{ metier.nomMetier }}</td>
            </tr>
            <tr>
                <th>Dateenreg</th>
                <td>{% if metier.dateEnreg %}{{ metier.dateEnreg|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('metier_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('metier_edit', { 'id': metier.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
