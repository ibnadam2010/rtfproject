{% extends 'adminbase.html.twig' %}

{% block admin %}
    {{ render(controller('AppBundle:Metier:new')) }}
    <br><br><br>
    <h3>Liste des metiers</h3>
    <div class="form-group">
        <div class = "input-group">
            <input type="text" id ="filter" name = "prenom" class="form-control" placeholder="Rechercher un metier"/>
        </div>
    </div>
<table  class="footable" data-page-size ="10" data-filter="#filter">
    <thead >
    <th data-toggle="true" style="background:#122e48">Id</th>
    <th data-hide="phone" style="background:#122e48">Metier</th>
    <th data-hide="phone" style="background:#122e48">Specialité</th>
    <th data-toggle="true" style="background:#122e48">Filière</th>
    <th data-hide="phone" style="background:#122e48">Action</th>
    </thead>
    <tbody >
    {% for metier in metiers %}
    <tr>
        <td>{{ metier.id }}</td>
        <td>{{ metier.nomMetier }}</td>
        <td>{{ metier.specialite.nomSpecialite }}</td>
        <td>{{ metier.specialite.filiere.nomFiliere }}</td>
        <td>
            {{ render(controller('AppBundle:Metier:edit',{'id':metier.id})) }}
            <button class="btn btn-danger btn-sm confirm"  onclick="deleteDep('{{ metier.id }}')" ><i class="fas fa-trash-alt"></i></button>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot class = "hide-if-no-paging">
    <td colspan="5">

        <div class = "pagination">

        </div>

    </td>

    </tfoot>
</table>


    <script type="text/javascript">
        $(".footable").footable();
    </script>
{% endblock %}
