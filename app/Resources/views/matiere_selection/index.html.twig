{% extends 'adminbase.html.twig' %}

{% block admin %}
    {{ render(controller('AppBundle:Matiere_selection:new')) }}
    <br><br><br>
    <h3>Liste des Matières Selectionnées</h3>
    <div class="form-group">
        <div class = "input-group">
            <input type="text" id ="filter" name = "prenom" class="form-control" placeholder="Rechercher uue matières selectionnées"/>
        </div>
    </div>
<table  class="footable" data-page-size ="10" data-filter="#filter">
    <thead >
    <th data-toggle="true" style="background:#122e48">Id</th>
    <th data-hide="phone" style="background:#122e48">Matière</th>
    <th data-hide="phone" style="background:#122e48">Specialité</th>
    <th data-toggle="true" style="background:#122e48">Coéfficient</th>
    <th data-hide="phone" style="background:#122e48">Action</th>
    </thead>
    <tbody >
    {% for matiere_selection in matiere_selections %}
    <tr>
        <td>{{ matiere_selection.id }}</td>
        <td>{{ matiere_selection.matiere.nomMatiere }}</td>
        <td>{{ matiere_selection.specialite.nomSpecialite }}</td>
        <td>{{ matiere_selection.coefMatiere }}</td>
        <td>
            {{ render(controller('AppBundle:Matiere_selection:edit',{'id':matiere_selection.id})) }}
            <button class="btn btn-danger btn-sm confirm"  onclick="deleteDep('{{ matiere_selection.id }}')" ><i class="fas fa-trash-alt"></i></button>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot class = "hide-if-no-paging">
    <td colspan="5">

        <div class = "pagination">

        </div>

    </td>

    </tfoot>
</table>


    <script type="text/javascript">
        $(".footable").footable();
    </script>
{% endblock %}
