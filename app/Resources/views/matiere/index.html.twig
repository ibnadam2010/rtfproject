{% extends 'adminbase.html.twig' %}

{% block admin %}
    {{ render(controller('AppBundle:Matiere:new')) }}
    <br><br><br>
    <h3>Liste des matières</h3>
    <div class="form-group">
        <div class = "input-group">
            <input type="text" id ="filter" name = "prenom" class="form-control" placeholder="Rechercher une matière"/>
        </div>
    </div>
<table  class="footable" data-page-size ="10" data-filter="#filter">
    <thead >
    <th data-hide="phone" style="background:#122e48">Nom Matière</th>
    <th data-hide="phone" style="background:#122e48">Action</th>
    </thead>
    <tbody >
    {% for matiere in matieres %}
    <tr>
        <td>{{ matiere.nomMatiere }}</td>
        <td>
            {{ render(controller('AppBundle:Matiere:edit',{'id':matiere.id})) }}
            <button class="btn btn-danger btn-sm confirm"  onclick="deleteMatiere('{{ matiere.id }}')" ><i class="fas fa-trash-alt"></i></button>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot class = "hide-if-no-paging">
    <td colspan="3">

        <div class = "pagination">

        </div>

    </td>

    </tfoot>
</table>


    <script type="text/javascript">
        $(".footable").footable();
    </script>
{% endblock %}
