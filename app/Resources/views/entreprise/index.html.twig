{% extends 'adminbase.html.twig' %}

{% block admin %}
    <h1>Entreprises list</h1>

    <table border="1"; style="width:auto";>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomentreprise</th>
                <th>Adresseentreprise</th>
                <th>Telentreprise</th>
                <th>Emailentreprise</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td><a href="{{ path('entreprise_show', { 'id': entreprise.id }) }}">{{ entreprise.id }}</a></td>
                <td>{{ entreprise.nomEntreprise }}</td>
                <td>{{ entreprise.adresseEntreprise }}</td>
                <td>{{ entreprise.telEntreprise }}</td>
                <td>{{ entreprise.emailEntreprise }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('entreprise_show', { 'id': entreprise.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('entreprise_edit', { 'id': entreprise.id }) }}">edit</a>
                        </li>
                        <li>
                            <a href="{{ path('entreprise_delete', { 'id': entreprise.id }) }}">delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entreprise_new') }}">Create a new entreprise</a>
        </li>
    </ul>
{% endblock %}
