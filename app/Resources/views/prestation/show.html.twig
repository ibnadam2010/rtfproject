{% extends 'adminbase.html.twig' %}

{% block admin %}
    <h1>Prestation</h1>

    <table border="1"; style="width:auto";>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ prestation.id }}</td>
            </tr>
            <tr>
                <th>Dureeprestation</th>
                <td>{{ prestation.dureePrestation }}</td>
            </tr>
            <tr>
                <th>Datedebutprestation</th>
                <td>{% if prestation.datedebutPrestation %}{{ prestation.datedebutPrestation|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefinprestation</th>
                <td>{% if prestation.datefinPrestation %}{{ prestation.datefinPrestation|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Coutprestation</th>
                <td>{{ prestation.coutPrestation }}</td>
            </tr>
            <tr>
                <th>Dateenreg</th>
                <td>{% if prestation.dateEnreg %}{{ prestation.dateEnreg|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('prestation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('prestation_edit', { 'id': prestation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
