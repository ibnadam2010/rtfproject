{% extends 'adminbase.html.twig' %}

{% block admin %}
    <h1>Domaine</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ domaine.id }}</td>
            </tr>
            <tr>
                <th>Nomdomaine</th>
                <td>{{ domaine.nomDomaine }}</td>
            </tr>
            <tr>
                <th>Dateenreg</th>
                <td>{% if domaine.dateEnreg %}{{ domaine.dateEnreg|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('domaine_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('domaine_edit', { 'id': domaine.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
