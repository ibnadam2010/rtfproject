{% extends 'adminbase.html.twig' %}

{% block admin %}
    {{ render(controller('AppBundle:Epreuve_bac:new')) }}
    <br><br><br>
    <h3>Liste des epreuves du bac</h3>
    <div class="form-group">
        <div class = "input-group">
            <input type="text" id ="filter" name = "prenom" class="form-control" placeholder="Rechercher une epreuve bac"/>
        </div>
    </div>
<table  class="footable" data-page-size ="10" data-filter="#filter">
    <thead >
    <th data-toggle="true" style="background:#122e48">Id</th>
    <th data-hide="phone" style="background:#122e48">Matière</th>
    <th data-toggle="true" style="background:#122e48">Bac</th>
    <th data-hide="phone" style="background:#122e48">Durée</th>
    <th data-toggle="true" style="background:#122e48">Coéfficient</th>
    <th data-hide="phone" style="background:#122e48">Type Epreuve</th>
    <th data-toggle="true" style="background:#122e48">Action</th>
    </thead>
    <tbody >
    {% for epreuve_bac in epreuve_bacs %}
    <tr>
        <td>{{ epreuve_bac.id }}</td>
        <td>{{ epreuve_bac.matiere.nomMatiere }}</td>
        <td>{{ epreuve_bac.bac.nomBac }}</td>
        <td>{{ epreuve_bac.duree }}</td>
        <td>{{ epreuve_bac.coefEpreuve }}</td>
        <td>{{ epreuve_bac.typeEpreuve }}</td>
        <td>
            {{ render(controller('AppBundle:Epreuve_bac:edit',{'id':epreuve_bac.id})) }}
            <button class="btn btn-danger btn-sm confirm"  onclick="deleteDep('{{ epreuve_bac.id }}')" ><i class="fas fa-trash-alt"></i></button>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot class = "hide-if-no-paging">
    <td colspan="7">

        <div class = "pagination">

        </div>

    </td>

    </tfoot>
</table>


    <script type="text/javascript">
        $(".footable").footable();
    </script>
{% endblock %}
