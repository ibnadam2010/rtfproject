
{% block body %}
    <button type="button" class="btn btn-warning btn-sm" data-toggle = "modal"    data-target = "#myModal{{ arrondissement.id }}"><i class="fas fa-pencil-alt"></i></button>

    <div class = "modal updateDep" id = "myModal{{ arrondissement.id }}" tabindex = "-1" role = "dialog"
         aria-labelledby = "myModalLabel{{ arrondissement.id }}" aria-hidden = "true">
        <div class = "modal-dialog">
            <div class = "modal-content">

                <div class = "modal-header">
                    <button type = "button" class = "close" data-dismiss = "modal"
                            aria-label ="close"><span aria-hidden="true">&times;</span></button>
                    <h4 class = "modal-title" id = "myModalLabel" ></h4>
                </div>


                <div class = "modal-body" >
                    {{ form_start(edit_form,{'action': path('arrondissement_edit',{'id':arrondissement.id}), 'method': 'POST'}) }}
                    {{ form_widget(edit_form) }}

                    {{ form_rest(edit_form) }}
                    <input type="submit" value="save">
                    {{ form_end(edit_form) }}

                </div>
                <div class = "modal-footer">
                    <button type = "button" class = "btn btn-default"
                            data-dismiss = "modal" >Fermer</button>


                </div>

            </div>
        </div>
    </div>
{% endblock %}
