{% extends 'adminbase.html.twig' %}

{% block admin %}
    {{ render(controller('AppBundle:Arrondissement:new')) }}
    <br><br><br>
    <h3>Liste des arrondissement</h3>
    <div class="form-group">
        <div class = "input-group">
            <input type="text" id ="filter" name = "prenom" class="form-control" placeholder="Rechercher un arrondissement"/>
        </div>
    </div>
<table  class="footable" data-page-size ="10" data-filter="#filter">
    <thead >
    <th data-toggle="true" style="background:#122e48">Id</th>
    <th data-hide="phone" style="background:#122e48">Arrondissement</th>
    <th data-hide="phone" style="background:#122e48">Commune</th>
    <th data-hide="phone" style="background:#122e48">DÃ©partement</th>
    <th data-hide="phone" style="background:#122e48">Action</th>
    </thead>
    <tbody >
    {% for arrondissement in arrondissements %}
    <tr>
        <td>{{ arrondissement.id }}</td>
                <td>{{ arrondissement.nomArrondissement }}</td>
                <td>{{ arrondissement.commune.nomCommune }}</td>
                <td>{{ arrondissement.commune.departement.nomDepartement }}</td>
        <td>
            {{ render(controller('AppBundle:Arrondissement:edit',{'id':arrondissement.id})) }}
            <button class="btn btn-danger btn-sm confirm"  onclick="deleteDep('{{ path('arrondissement_delete', { 'id': arrondissement.id }) }}')" ><i class="fas fa-trash-alt"></i></button>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot class = "hide-if-no-paging">
    <td colspan="5">

        <div class = "pagination">

        </div>

    </td>

    </tfoot>
</table>


    <script type="text/javascript">
        $(".footable").footable();
    </script>
{% endblock %}
