{% extends 'adminbase.html.twig' %}

{% block admin %}
{{ render(controller('AppBundle:Commune:new')) }}
<br/><br/><br/>

<h3>liste des communes</h3>
        <div class="form-group">
        <div class = "input-group">
            <input type="text" id ="filter" name = "prenom" class="form-control" placeholder="Rechercher une commune"/>
        </div>
    </div>
<table  class="footable" data-page-size ="10" data-filter="#filter">
    <thead >
    <th data-toggle="true" style="background:#122e48">Id</th>
    <th data-hide="phone" style="background:#122e48">Commune</th>
    <th data-hide="phone" style="background:#122e48">Departement</th>
    <th data-hide="phone" style="background:#122e48">Action</th>
    </thead>
    <tbody >
    {% for commune in communes %}
    <tr>
        <td>{{commune.id}}</td>
        <td>{{ commune.nomCommune }}</td>
        <td>{{ commune.departement.nomDepartement }}</td>
        <td>
            {{ render(controller('AppBundle:Commune:edit',{'id':commune.id})) }}
            
            <button class="btn btn-danger btn-sm confirm"  onclick="deleteDep('{{ commune.id }}')" ><i class="fas fa-trash-alt"></i></button>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot class = "hide-if-no-paging">
    <td colspan="4">

        <div class = "pagination">

        </div>

    </td>

    </tfoot>
</table>


{% endblock %}
