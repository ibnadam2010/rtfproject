{% extends 'adminbase.html.twig' %}

{% block admin %}
    {{ render(controller('AppBundle:Diplome:new')) }}
    <br><br><br>
    <h3>Liste des diplômes</h3>
    <div class="form-group">
        <div class = "input-group">
            <input type="text" id ="filter" name = "prenom" class="form-control" placeholder="Rechercher un diplôme"/>
        </div>
    </div>
<table  class="footable" data-page-size ="10" data-filter="#filter">
    <thead >
    <th data-toggle="true" style="background:#122e48">Id</th>
    <th data-hide="phone" style="background:#122e48">Diplôme</th>
    <th data-toggle="true" style="background:#122e48">Niveau</th>
    <th data-hide="phone" style="background:#122e48">Spécialité</th>
    <th data-hide="phone" style="background:#122e48">Action</th>
    </thead>
    <tbody >
    {% for diplome in diplomes %}
    <tr>
        <td>{{ diplome.id }}</td>
        <td>{{ diplome.nomDiplome }}</td>
        <td>{{ diplome.niveauDiplome }}</td>
        <td>{{ diplome.specialite.nomSpecialite }}</td>
        <td>
            {{ render(controller('AppBundle:Departement:edit',{'id':diplome.id})) }}
            <button class="btn btn-danger btn-sm confirm"  onclick="deleteDep('{{ diplome.id }}')" ><i class="fas fa-trash-alt"></i></button>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot class = "hide-if-no-paging">
    <td colspan="5">

        <div class = "pagination">

        </div>

    </td>

    </tfoot>
</table>


    <script type="text/javascript">
        $(".footable").footable();
    </script>
{% endblock %}

