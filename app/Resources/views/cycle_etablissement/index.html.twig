{% extends 'adminbase.html.twig' %}

{% block admin %}
    {{ render(controller('AppBundle:Cycle_etablissement:new')) }}
    <br><br><br>
    <h3>Liste des Cycles Etablissements</h3>
    <div class="form-group">
        <div class = "input-group">
            <input type="text" id ="filter" name = "prenom" class="form-control" placeholder="Rechercher un Cycle Etablissement"/>
        </div>
    </div>
<table  class="footable" data-page-size ="10" data-filter="#filter">
    <thead >
    <th data-toggle="true" style="background:#122e48">Id</th>
    <th data-hide="phone" style="background:#122e48">Etablissement</th>
    <th data-hide="phone" style="background:#122e48">Cycle</th>
    <th data-hide="phone" style="background:#122e48">Action</th>
    </thead>
    <tbody >
    {% for cycle_etablissement in cycle_etablissements %}
    <tr>
        <td>{{ cycle_etablissement.id }}</td>
        <td>{{ cycle_etablissement.etablissement.nomEtablissement }}</td>
        <td>{{ cycle_etablissement.cycle.nomCycle }}</td>
        <td>
            {{ render(controller('AppBundle:Cycle_etablissement:edit',{'id':cycle_etablissement.id})) }}
            <button class="btn btn-danger btn-sm confirm"  onclick="deleteDep('{{ cycle_etablissement.id }}')" ><i class="fas fa-trash-alt"></i></button>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot class = "hide-if-no-paging">
    <td colspan="4">

        <div class = "pagination">

        </div>

    </td>

    </tfoot>
</table>


    <script type="text/javascript">
        $(".footable").footable();
    </script>
{% endblock %}
