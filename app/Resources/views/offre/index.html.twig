{% extends 'adminbase.html.twig' %}
{% block title %}Offre{% endblock %}
{% block admin %}
    {{ render(controller('AppBundle:Offre:new')) }}
    <br><br><br>
    <h3>Liste des offres</h3>
    <div class="form-group">
        <div class = "input-group">
            <input type="text" id ="filter" name = "prenom" class="form-control" placeholder="Rechercher un offre"/>
        </div>
    </div>
<table  class="footable" data-page-size ="10" data-filter="#filter">
    <thead >
    <th data-toggle="true" style="background:#122e48">id</th>
    <th data-hide="phone" style="background:#122e48">Intitulé</th>
    <th data-hide="phone" style="background:#122e48">Nature</th>
    <th data-toggle="true" style="background:#122e48">Type</th>
    <th data-hide="phone" style="background:#122e48">durée</th>
    <th data-toggle="true" style="background:#122e48">Description</th>
    <th data-hide="phone" style="background:#122e48">Pièce</th>
    <th data-hide="phone" style="background:#122e48">Date valide</th>
    <th data-toggle="true" style="background:#122e48">date</th>
    <th data-hide="phone" style="background:#122e48">chemin</th>
    <th data-hide="phone" style="background:#122e48">Action</th>
    </thead>
    <tbody >
    {% for offre in offres %}
    <tr>
        <td>{{ offre.id }}</td>
        <td>{{ offre.intituleOffre }}</td>
        <td>{{ offre.natureOffre }}</td>
        <td>{{ offre.typeOffre }}</td>
        <td>{{ offre.dureeOffre }}</td>
        <td>{{ offre.descriptionOffre }}</td>
        <td>{{ offre.pjOffre }}</td>
        <td>{% if offre.datevaliditeOffre %}{{ offre.datevaliditeOffre|date('Y-m-d') }}{% endif %}</td>
        <td>{% if offre.dateEnreg %}{{ offre.dateEnreg|date('Y-m-d H:i:s') }}{% endif %}</td>
        <td>{{ offre.path }}</td>
        <td>
            {{ render(controller('AppBundle:Offre:edit',{'id':offre.id})) }}
            <button class="btn btn-danger btn-sm confirm"  onclick="deleteDep('{{ offre.id }}')" ><i class="fas fa-trash-alt"></i></button>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot class = "hide-if-no-paging">
    <td colspan="11">

        <div class = "pagination">

        </div>

    </td>

    </tfoot>
</table>


    <script type="text/javascript">
        $(".footable").footable();
    </script>
{% endblock %}
