{% extends 'adminbase.html.twig' %}

{% block admin %}
    <h1>Etablissement</h1>

    <table border="1"; style="width:auto">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ etablissement.id }}</td>
            </tr>
            <tr>
                <th>Nom etablissement</th>
                <td>{{ etablissement.nomEtablissement }}</td>
            </tr>
            <tr>
                <th>Type </th>
                <td>{{ etablissement.typeEtablissement }}</td>
            </tr>
            
            <tr>
                <th>Statut</th>
                <td>{{ etablissement.statutEtablissement }}</td>
            </tr>
            <tr>
                <th>Date creation</th>
                <td>{{ etablissement.dateCreation }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ etablissement.adresseEtablissement }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ etablissement.telEtablissement }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ etablissement.emailEtablissement }}</td>
            </tr>
            <tr>
                <th>Site web</th>
                <td>{{ etablissement.sitewebEtablissement }}</td>
            </tr>
            <tr>
                <th>Date enreg</th>
                <td>{% if etablissement.dateEnreg %}{{ etablissement.dateEnreg|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
            <th>departement</th>
            <td>{{ etablissement.departement.nomDepartement }}</td>
            </tr>
            <tr>
            <th>commune</th>
            <td>{{ etablissement.commune.nomCommune }}</td>
            </tr>
            <tr>
            <th>Arrondissement</th>
            <td>{{ etablissement.arrondissement.nomArrondissement }}</td>
            </tr>
                

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('index_etablissement') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('etablissement_edit', { 'id': etablissement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
