{% extends 'adminbase.html.twig' %}

{% block admin %}
    <h1>Arrondissement</h1>

    <table border="1"; style="width:auto">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ arrondissement.id }}</td>
            </tr>
            <tr>
                <th>Nom arrondissement</th>
                <td>{{ arrondissement.nomArrondissement }}</td>
            </tr>
            <tr>
                <th> commune </th>
                <td>{{ arrondissement.commune.nomCommune }}</td>
            </tr>
            <tr>
                <th>departement</th>
                <td>{{ arrondissement.commune.departement.nomDepartement }}</td>
            </tr>
            <tr>
                <th>Date enreg</th>
                <td>{% if arrondissement.dateEnreg %}{{ arrondissement.dateEnreg|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('index_arrondissement') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('arrondissement_edit', { 'id': arrondissement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
