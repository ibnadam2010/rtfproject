{% extends 'adminbase.html.twig' %}

{% block admin %}
    <h1>Promotions list</h1>

    <table border="1"; style="width:auto">
        <thead border="1" ; bgcolor="#00FF00">
            <tr>
                <th>Id</th>
                <th>Nom promotion</th>
                <th>Nom Cycle</th>
                <th style="width: auto">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td><a href="{{ path('promotion_show', { 'id': promotion.id }) }}">{{ promotion.id }}</a></td>
                <td>{{ promotion.nomPromotion }}</td>
                <td>{{ promotion.cycle.nomCycle }}</td>
                
                <td>
                    <ul>
                       
                            <a href="{{ path('promotion_show', { 'id': promotion.id }) }}" type="submit"  class="btn btn-primary btn-sm">show</a>&nbsp &nbsp &nbsp
                        
                            <a href="{{ path('promotion_edit', { 'id': promotion.id }) }}" type="submit"  class="btn btn-primary btn-sm">edit</a>

                            &nbsp &nbsp &nbsp 

                            <a href="{{ path('promotion_delete', { 'id': promotion.id }) }}" class="btn btn-danger btn-sm">Delete</a>
                        
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('promotion_new') }}">Create a new promotion</a>
        </li>
    </ul>
{% endblock %}
